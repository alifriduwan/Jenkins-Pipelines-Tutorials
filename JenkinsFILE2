pipeline {
    agent any

    parameters {
        booleanParam(name: 'RUN_DEPLOY', defaultValue: true, description: 'Should we deploy?')
    }

    stages {
        stage('Build') {
            steps {
                echo "Building application..."
            }
        }
        stage('Deploy') {
            when {
                beforeAgent true
                expression { return params.RUN_DEPLOY }
            }
            steps {
                echo 'Deploying application...'
            }
        }
        stage('Skip-Note') {
            when {
                beforeAgent true
                expression { return !params.RUN_DEPLOY }
            }
            steps {
                echo 'RUN_DEPLOY=false â†’ skipping Deploy stage.'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished (RUN_DEPLOY=${params.RUN_DEPLOY})"
        }
    }
}
